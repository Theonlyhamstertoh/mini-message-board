<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="flex">
      <h1><%= title %></h1>
      <a href="/new" class="add">Add A Message</a>
      <a href="/refresh" class="add">Refresh</a>

    </div>
      <% if(messages.length > 0) {%>
        <% messages.forEach(message => {  %>
          <div class="message">
            <h3><%= message.user %> </h3>
            <p><%= message.text %> </p>
            <p class="time"><%= message.addTime %> </p>
          </div>
        <% }) %> 
      <% } %> 

 </body>
</html>
